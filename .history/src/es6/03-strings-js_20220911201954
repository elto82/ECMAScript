
let hello = 'hello';
let world = 'world';
let epicPhrase = hello + ' ' + world
console.log(epicPhrase);

//template literals
console.log(`${hello} ${world}`);

//multi-line strings

let lorem = 'esto en una linea string \n' + 'esta es otra linea de strings'
console.log(lorem);

let lorem2 = `esta es una linea de string con literals template
esta es la segunda multi-linea con 
template literals`
console.log(lorem2);